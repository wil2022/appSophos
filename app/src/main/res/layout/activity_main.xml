<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
     >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_sophos_home"
            tools:layout_editor_absoluteX="center"
            tools:layout_editor_absoluteY="4dp" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tus credenciales"
            android:textSize="20sp"
            android:layout_margin="25dp"


            />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="228dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="290dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="226dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp" />


        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="Ingresar"
         android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGRESAR CON LA HUELLA"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/buttonHuella"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/fingerprintAuthDrawable"
            android:backgroundTint="@android:color/background_light" />

        <TextView
            android:id="@+id/textViewPrueba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>